{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "rating": {
      "type": "decimal",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Breakfast",
        "Drinks",
        "Desserts",
        "Iced Coffee",
        "Hot Coffee"
      ],
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    }
  }
}
